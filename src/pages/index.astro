---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Product from "../components/Product.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Home">
  <Header />
  <main>
    <section class="p-bottom presentation-section" style="--p-bottom: var(--size-9)">
      <div class="wrapper">
        <div class="presentation">
          <img src="/images/image-interactive.jpg" alt="A client using our VR product">
          <div class="p-block flex flex-col items-center">
            <h2 class="fs-lg text-center p-bottom">The leader in interactive VR</h2>
            <p class="text-center text-gray-dark font-primary">
              Founded in 2011, Loopstudios has been producing world-class 
              virtual reality projects for some of the best companies around the globe.
              Our award-winning creations have transformed businesses through digital 
              experiences that bind to their brand 
            </p>
          </div>
        </div>
      </div>
    </section>
    
    <section class="p-bottom" style="--p-bottom: var(--size-9)">
      <div class="wrapper">
        <div class="flex flex-col items-center creations">
           <h2 class="fs-lg text-center p-bottom">Our creations</h2>
           <div class="grid-auto-fit gap m-bottom" style="--gap-size:var(--size-6)">
              <Product product={{
                img: '/images/image-deep-earth.jpg',
                img_desktop: '/images/image-deep-earth-desktop.jpg',
                title: 'Deep earth'
              }}/>
              <Product product={{
                img: '/images/image-night-arcade.jpg',
                img_desktop: '/images/image-night-arcade-desktop.jpg',
                title: 'Night arcade'
              }}/>

               <Product product={{
                img: '/images/image-soccer-team.jpg',
                img_desktop: '/images/image-soccer-team-desktop.jpg',
                title: 'Soccer team'
              }}/>

               <Product product={{
                img: '/images/image-grid.jpg',
                img_desktop: '/images/image-grid-desktop.jpg',
                title: 'The grid'
              }}/>

              <Product product={{
                img: '/images/image-from-above.jpg',
                img_desktop: '/images/image-from-above-desktop.jpg',
                title: 'From above'
              }}/>
              <Product product={{
                img: '/images/image-pocket-borealis.jpg',
                img_desktop: '/images/image-pocket-borealis-desktop.jpg',
                title: 'Pocket borealis'
              }}/>
              <Product product={{
                img: '/images/image-curiosity.jpg',
                img_desktop: '/images/image-curiosity-desktop.jpg',
                title: 'The Curiosity'
              }}/>

              <Product product={{
                img: '/images/image-fisheye.jpg',
                img_desktop: '/images/image-fisheye-desktop.jpg',
                title: 'Make it fisheye'
              }}/>
              
           </div>
          
           <button >SEE ALL</button>
  
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>

  @media screen and (min-width: 850px) {

    .presentation-section {
      margin-bottom: var(--size-8);
      
    }

  
    .presentation {
      position: relative;
    
    }

    

    .presentation > div {
      position: absolute;
      background: hsl(var(--crl-white));
      inset: 28% 0 0 52%;
      padding: 0 0 0 var(--size-10);
      justify-content: flex-end;
      max-width: 500px;
    }

    .presentation > div h2 {
      text-align: left;
    }

    .presentation > div p {
      text-align: left;
    }

    .creations {
      display: grid;
     
      grid-template-areas: "hd hd btn"
                           "products products products";
      gap: 4rem;
    }
    
    .creations h2 {
      grid-area: hd;
      display: flex;
      text-align:left;
      padding-bottom: 0;
    }
    .creations div {
      grid-area: products;
    }

    .creations button {
      grid-area: btn;
      width: 50%;
      display: flex;
      max-width: max-content;
      justify-self: end;
    }
    
  }

  @media screen and (min-width: 1250px) {
    .presentation > div {
      inset: 28% 0 0 42%;
    }
  }





</style>
